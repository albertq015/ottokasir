<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/gambar_barang"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:src="@drawable/gambar_sample" />

            <TextView
                android:id="@+id/nama_barang"
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="23dp"
                android:layout_marginBottom="61dp"
                android:layout_toRightOf="@+id/gambar_barang"
                android:text="Nusantara Cup"
                android:textAppearance="@style/TextStyle3" />

            <TextView
                android:id="@+id/harga_barang"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="64dp"
                android:layout_marginBottom="20dp"
                android:layout_toRightOf="@+id/gambar_barang"
                android:text="Rp 8.000"
                android:textAppearance="@style/TextStyle13" />

            <TextView
                android:id="@+id/stok"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="44dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="40dp"
                android:text="Stok"
                android:textAlignment="viewEnd"
                android:textAppearance="@style/TextStyle50" />

            <TextView
                android:id="@+id/total_stok"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="64dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:text="16"
                android:textAlignment="viewEnd"
                android:textAppearance="@style/TextStyle41" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>