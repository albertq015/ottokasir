<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_cc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="28dp"
    app:cardBackgroundColor="@color/color_white"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:paddingLeft="18dp"
        android:paddingTop="19dp"
        android:paddingBottom="17dp">

        <RelativeLayout
            android:id="@+id/logo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/rect_bordergrey">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="32dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/credit_card" />
        </RelativeLayout>

        <TextView
            android:id="@+id/method_name"
            style="@style/TextStyle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/logo"
            android:text="I-Saku" />

        <TextView
            android:id="@+id/method_description"
            style="@style/TextStyle46"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/method_name"
            android:layout_toRightOf="@id/logo"
            android:text="Menggunakan I-Saku" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="22dp">

            <TextView
                android:id="@+id/status_t"
                style="@style/TextStyle43"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terpilih"
                android:textAlignment="textEnd"
                android:visibility="gone" />

            <TextView
                android:id="@+id/status_p"
                style="@style/TextStyle54"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_arrow"
                android:drawablePadding="8dp"
                android:text="Pilih"
                android:textAlignment="textEnd"
                android:visibility="visible" />
        </FrameLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
