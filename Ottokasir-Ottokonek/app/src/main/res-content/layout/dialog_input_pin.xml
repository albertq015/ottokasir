<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/pinCodeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toTopOf="@id/gLayout_keypad_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/pinCodeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="48dp"
            android:gravity="center_horizontal"
            android:text="Masukkan Kode PIN"
            android:textColor="@color/color_white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pinCodeTitle"
            android:gravity="center">

            <ImageView
                android:id="@+id/pin1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:src="@drawable/circle_greyishbrown_solid" />

            <ImageView
                android:id="@+id/pin2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_toRightOf="@id/pin1"
                android:src="@drawable/circle_greyishbrown_solid" />

            <ImageView
                android:id="@+id/pin3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_toRightOf="@id/pin2"
                android:src="@drawable/circle_greyishbrown_solid" />

            <ImageView
                android:id="@+id/pin4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_toRightOf="@id/pin3"
                android:src="@drawable/circle_greyishbrown_solid" />

            <ImageView
                android:id="@+id/pin5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_toRightOf="@id/pin4"
                android:src="@drawable/circle_greyishbrown_solid" />

            <ImageView
                android:id="@+id/pin6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_toRightOf="@id/pin5"
                android:src="@drawable/circle_greyishbrown_solid" />

        </RelativeLayout>
    </RelativeLayout>

    <GridLayout
        android:id="@+id/gLayout_keypad_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:columnCount="3"
        android:drawSelectorOnTop="true"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pinCodeLayout">

        <FrameLayout
            android:id="@+id/button1"
            android:layout_columnWeight="1">

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/selector"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/color_white" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/button2"
            android:layout_columnWeight="1">

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/selector"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/color_white" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/button3"
            android:layout_columnWeight="1">

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/selector"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/color_white" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/button4"
            android:layout_columnWeight="1"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/selector"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/color_white" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/button5"
            android:layout_columnWeight="1"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/selector"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/color_white" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/button6"
            android:layout_columnWeight="1"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/selector"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/color_white" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/button7"
            android:layout_columnWeight="1"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/selector"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/color_white" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/button8"
            android:layout_columnWeight="1"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/selector"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/color_white" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/button9"
            android:layout_columnWeight="1"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/selector"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/color_white" />
        </FrameLayout>

        <FrameLayout android:layout_columnWeight="1" />

        <FrameLayout
            android:id="@+id/button0"
            android:layout_columnWeight="1"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/lupaPin"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/selector"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/color_white" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/button_back"
            android:layout_columnWeight="1"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/backspace_white"
                android:textColor="@color/color_white" />
        </FrameLayout>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>