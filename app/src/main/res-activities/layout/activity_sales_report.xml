                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="17dp"
                android:gravity="start"
                android:text="Laporan Penjualan"
                android:textAppearance="@style/TextStyle18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="62dp"
                android:layout_marginBottom="27dp"
                android:text="Bulan"
                android:textAlignment="viewEnd"
                android:textAppearance="@style/TextStyle50" />

            <TextView
                android:id="@+id/tv_dateyear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="62dp"
                android:layout_marginBottom="12dp"
                android:text="Januari 2019"
                android:textAlignment="viewEnd"
                android:textAppearance="@style/TextStyle51" />

            <ImageView
                android:id="@+id/calenderAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="26dp"
                android:padding="5dp"
                android:src="@drawable/ic_calendar_yellow" />
        </RelativeLayout>


    </androidx.appcompat.widget.Toolbar>

