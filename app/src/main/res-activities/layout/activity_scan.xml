<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@color/white"
        android:outlineSpotShadowColor="@color/slate_grey">

        <ImageView
            android:id="@+id/back_appbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="12dp"
            android:src="@drawable/ic_close"
            app:srcCompat="@drawable/ic_close"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Scan Barcode"
            android:textAppearance="@style/TextStyle18" />

    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!--<me.dm7.barcodescanner.zxing.ZXingScannerView-->
            <!--android:id="@+id/zxing_cam"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--app:borderColor="@android:color/transparent"-->
            <!--app:laserEnabled="false"-->
            <!--app:maskColor="@android:color/transparent" />-->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="40dp"
            android:scaleType="centerCrop"
            android:scaleY="1.2"
            android:src="@drawable/combined_shape" />


        <TextView
            style="@style/TextStyle19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="72dp"
            android:layout_marginRight="40dp"
            android:text="Arahkan kamera pada barcode yang tertera pada produk yang dibeli " />
    </FrameLayout>

</LinearLayout>