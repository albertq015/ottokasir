<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@color/white"
            android:elevation="4dp"
            android:outlineSpotShadowColor="@color/slate_grey"
            app:layout_scrollFlags="scroll|enterAlways">

            <ImageView
                android:id="@+id/back_barang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="16dp"
                android:src="@drawable/ic_back" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="Persediaan Barang"
                    android:textAppearance="@style/TextStyle18" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/txt_sisa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sisa Jenis Barang"
                android:textAppearance="@style/TextStyle47" />

            <TextView
                android:id="@+id/tv_sjb_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Sisa Barang di Rak"
                android:textAppearance="@style/TextStyle47" />


            <TextView
                android:id="@+id/tv_totalkinds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_sisa"
                android:layout_alignStart="@+id/txt_sisa"
                android:layout_marginStart="0dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="16dp"
                android:drawableLeft="@drawable/ic_stok"
                android:drawablePadding="8dp"
                android:text="0"
                android:textAppearance="@style/TextStyle48" />

            <TextView
                android:id="@+id/total_sisa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_sjb_title"
                android:layout_alignStart="@+id/tv_sjb_title"
                android:layout_alignLeft="@id/tv_sjb_title"
                android:drawableLeft="@drawable/ic_barang"
                android:drawablePadding="8dp"
                android:text="0"
                android:textAppearance="@style/TextStyle49" />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignBottom="@id/tv_totalkinds"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/white_five" />

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/srl_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_barang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp" />
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>