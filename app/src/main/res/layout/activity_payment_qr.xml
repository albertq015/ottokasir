<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".ui.activity.payment.PaymentQRActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="16dp">


        <TextView
            android:id="@+id/tvMerchantName"
            style="@style/TextStyle13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Salon Bu Rita" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/viewShareQr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/ivQr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/tvShareQr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/ic_share_green"
                    android:drawablePadding="2dp"
                    android:gravity="center"
                    android:text="@string/bagikan_qr"
                    android:textColor="@color/green_base_color"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </LinearLayout>

            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/pb_progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                app:SpinKit_Color="@color/colorPrimaryDark"
                app:SpinKit_Style="Circle" />

        </FrameLayout>


        <LinearLayout
            android:id="@+id/viewRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="25dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_refresh" />

            <TextView
                style="@style/TextStyle13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:text="@string/koneksi_buruk"
                android:textColor="#4a4a4a"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="3sp"
                android:text="@string/silakan_periksa_koneksi_internet_anda_dan_klik_tombol_dibawah_ini_untuk_menampilkan_qr"
                android:textColor="#4a4a4a"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnRefresh"
                style="@style/AvenirHeavy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="36dp"
                android:background="@drawable/rounded_rectangle_blue"
                android:padding="12dp"
                android:text="@string/coba_lagi"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </LinearLayout>


        <TextView
            android:id="@+id/tvSuggestionCheck"
            style="@style/DinRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="36dp"
            android:gravity="center"
            android:lineSpacingExtra="4sp"
            android:text="@string/tekan_tombol_ini_setelah_pembeli_melakukan_pembayaran"
            android:textColor="#4a4a4a"
            android:textSize="14sp"
            android:visibility="gone" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/spCheckStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                app:SpinKit_Color="@color/colorPrimaryDark"
                app:SpinKit_Style="Circle" />

            <Button
                android:id="@+id/btnCheckStatus"
                style="@style/AvenirHeavy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:background="@drawable/rounded_rectangle_blue"
                android:text="@string/selesaikan_pembayaran"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:visibility="gone" />
        </FrameLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.3"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/TextStyle23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_pembayaran" />

        <TextView
            android:id="@+id/tvTotalPurchase"
            style="@style/TextStyle19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:textStyle="bold"
            tools:text="Rp.170.000" />

    </LinearLayout>

</LinearLayout>