<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.activity.payment.PaymentKasbonActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="212dp"
                    android:layout_weight="1.25"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTitleTotal"
                        style="@style/TextStyle19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_pembayaran" />

                    <TextView
                        android:id="@+id/tvTotalPurchase"
                        style="@style/TextStyle19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp.170.000"
                        android:textSize="32sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.75"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <include layout="@layout/partial_customer_detail" />

                    <TextView
                        style="@style/DinMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:text="@string/metode_pembayaran_kapital"
                        android:textColor="#4a4a4a"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/DinMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/kasbon"
                        android:textColor="#191919"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/btnPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="16dp"
            android:background="@drawable/rounded_fill_blue"
            android:padding="16dp"
            android:text="@string/selesai"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </FrameLayout>


</FrameLayout>