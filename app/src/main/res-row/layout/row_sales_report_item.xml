<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sales_date_label"
                style="@style/TextStyle52"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="18dp"
                android:text="Tanggal" />

            <TextView
                android:id="@+id/sales_barang"
                style="@style/TextStyle52"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="20dp"
                android:text="Barang Terjual"
                android:textAlignment="viewStart" />

            <TextView
                android:id="@+id/sales_paid"
                style="@style/TextStyle53"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sales_date"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="18dp"
                android:text="Rp 21.000" />

            <TextView
                android:id="@+id/sales_date"
                style="@style/TextStyle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sales_date_label"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:text="10 Januari 2019" />

            <TextView
                android:id="@+id/sales_amount"
                style="@style/TextStyle13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sales_barang"
                android:layout_alignEnd="@+id/sales_barang"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="20dp"
                android:text="0" />

            <TextView
                android:id="@+id/sales_detail_action"
                style="@style/TextStyle54"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sales_amount"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="18dp"
                android:drawableRight="@drawable/ic_arrow"
                android:text="Lihat Detil"
                android:textAlignment="textEnd" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>