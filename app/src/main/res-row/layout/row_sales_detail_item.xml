<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="18dp"
                android:text="No 023 321 000"
                android:textAppearance="@style/TextStyle3" />

            <TextView
                android:id="@+id/txt_pem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="20dp"
                android:text="Total Pembelian"
                android:textAlignment="viewEnd"
                android:textAppearance="@style/TextStyle50" />

            <TextView
                android:id="@+id/txt_jam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_itm"
                android:layout_marginStart="20dp"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="17dp"
                android:text="Jam 08:01"
                android:textAppearance="@style/TextStyle52" />

            <TextView
                android:id="@+id/txt_itm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_no"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:text="2 item"
                android:textAppearance="@style/TextStyle56" />

            <TextView
                android:id="@+id/txt_hrg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_pem"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="20dp"
                android:text="Rp 20.000"
                android:textAppearance="@style/TextStyle13" />

            <TextView
                android:id="@+id/detil_transaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_hrg"
                android:layout_alignParentEnd="true"
                android:layout_margin="11dp"
                android:layout_marginEnd="20dp"
                android:drawableEnd="@drawable/ic_arrow"
                android:text="Lihat Detil"
                android:textAlignment="viewEnd"
                android:textAppearance="@style/TextStyle54" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>